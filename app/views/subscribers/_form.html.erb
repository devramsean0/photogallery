<section class="p-2 bg-gray-800 text-white">
    <p>
        <h2 class="text-2xl mb-4">Subscribe to my photo digest</h2>
        Subscribe to receive a weekly digest of my latest photos. You can unsubscribe at any time.
    </p>
    <%= form_with url: subscribers_path, method: :post, local: true, class: "flex gap-4" do |form| %>
        <div class="my-5">
            <%= form.label :email_address, "Your Email:" %>
            <%= form.email_field :email_address, required: true, placeholder: "joe@example.com" %>
        </div>

        <%= form.submit "Subscribe", class: "" %>
    <% end %>
</section>